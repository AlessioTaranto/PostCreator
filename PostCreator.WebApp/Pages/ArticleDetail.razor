@page "/article-detail"
@using static PostCreator.Core.Models
@using PostCreator.Core.Services
@inject IArticleService ArticleService
@inject NavigationManager Navigation

<PageTitle>Article Detail</PageTitle>

<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100 position-relative">

<div class="content ">
        <h3 class="text-center">Generate the article</h3>
@if (ArticleService.Articles.Count > 0)
{
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <label for="articleTitle" class="form-label">Title</label>
                <input type="text" class="form-control" id="articleTitle" @bind="ArticleService.Articles[0].Title">
            </div>
            <div class="mb-3">
                <label for="articleSubtitle" class="form-label">Subtitle</label>
                <input type="text" class="form-control" id="articleSubtitle" @bind="ArticleService.Articles[0].Subtitle">
            </div>
            <div class="mb-3">
                <label for="maxChars" class="form-label">Max Characters</label>
                <input type="number" class="form-control mb-2" id="maxChars" @bind="MaxCharacters">
            </div>
            <button class="btn btn-primary" @onclick="GenerateFullArticle">
                <i class="fas fa-cogs btn-icon"></i> Generate Full Article
            </button>
        </div>
    </div>
}
else
{
    <div>No article selected. Please select an article from the list.</div>
}
    </div>
</div>

@code {
    private int MaxCharacters { get; set; } = 200;

    private async Task GenerateFullArticle()
    {
        // Simulate a call to generate the full article with max characters
        await Task.Delay(2000);
        if (ArticleService.Articles.Count > 0)
        {
            ArticleService.Articles[0].Text = $"Full article content with a max of {MaxCharacters} characters.";
            Navigation.NavigateTo("/article-text");

        }
    }

    private void RegenerateTitleSubtitle()
    {
        if (ArticleService.Articles.Count > 0)
        {
            // Logic to regenerate title and subtitle
            ArticleService.Articles[0].Title = "New Generated Title";
            ArticleService.Articles[0].Subtitle = "New Generated Subtitle";
        }
    }

    private void ModifyText()
    {
        if (ArticleService.Articles.Count > 0)
        {
            // Logic to modify the article text
            ArticleService.Articles[0].Text = "Modified article content.";
        }
    }
}
